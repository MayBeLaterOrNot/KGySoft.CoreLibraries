<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net35;net40;net45</TargetFrameworks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <RootNamespace>KGySoft</RootNamespace>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\KGySoft.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Update="KGySoft.CoreLibraries.Messages.resx">
      <LogicalName>KGySoft.CoreLibraries.Messages.resources</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if exist $(ProjectDir)..\__RecompILer\bin\$(Configuration)\$(TargetFramework)\RecompILer.exe $(ProjectDir)..\__RecompILer\bin\$(Configuration)\$(TargetFramework)\RecompILer $(TargetFramework) $(ProjectDir)\bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).dll ..\KGySoft.snk" />
  </Target>

</Project>
